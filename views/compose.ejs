<%- include('partials/header') -%>
<h1>Compose</h1>
<form action="/" method="post" class="">
    <div class="form-group">
        <label for="Title" class="form-label">Title</label>
        <input type="text" name="contentTitle" class="form-control" placeholder="Type your new title here." autocomplete="off" id="contentTitle">
    </div>
    <div class="form-group">
        <label for="Post" class="form-label">Post</label>
        <textarea type="text" rows="4" name="contentBody" class="form-control mb-4" placeholder="Type your new content here." autocomplete="off" id="contentBody"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="submit">Publish</button>
</form>
<%- include('partials/footer') -%>